<div class="card">
  <div class="card-header">Roles</div>
  <div class="card-datatable table-response p-3">
    <div class="row align-items-center mr-3">
      <div class="col-sm-12">
        <a class="btn btn-primary float-right mb-3" href="<%= Routes.admin_role_path(@conn, :new) %>">New Role</a>
      </div>
    </div>
    <table class="datatables-simple table table-striped table bordered">
      <thead>
        <tr>
          <th width="5%">#</th>
          <th width="80%">Name</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
      <%= for role <- @roles do %>
        <tr>
          <td><%= role.id %></td>
          <td><%= role.name %></td>
          <td>
            <%= link "Edit", to: Routes.admin_role_path(@conn, :edit, role), class: "btn btn-primary btn-sm mr-2"%>
            <%= link "Delete", to: Routes.admin_role_path(@conn, :delete, role), method: :delete, class: "btn btn-danger btn-sm" %>
          </td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>
